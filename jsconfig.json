{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "./src",
    "paths": {
      "~assets/*": ["./assets/*"],
      "~constants/*": ["./constants/*"],
      "~context/*": ["./context/*"],
      "~helpers/*": ["./helpers/*"],
      "~hooks/*": ["./hooks/*"],
      "~modules/*": ["./modules/*"],
      "~router/*": ["./router/*"],
      "~types/*": ["./types/*"],
      "~validators/*": ["./validators/*"]
    }
  },
  "exclude": ["dist", "node_modules", "**/node_modules/*"]
}
